{
  "dataset_reader": {
    "name": "typos_wikipedia_reader"
  },
  "dataset_iterator": {
    "name": "typos_iterator",
    "test_ratio": 0.05
  },
  "chainer":{
    "in": ["x"],
    "in_y": ["y"],
    "pipe": [
      {
        "name": "str_lower",
        "id": "lower",
        "in": ["x"],
        "out": ["x_lower"]
      },
      {
        "name": "nltk_tokenizer",
        "id": "tokenizer",
        "in": ["x_lower"],
        "out": ["x_tokens"]
      },
      {
        "ref": "tokenizer",
        "in": ["y"],
        "out": ["y_tokens"]
      },
      {
        "fit_on": ["x_tokens", "y_tokens"],
        "in": ["x_tokens"],
        "out": ["y_predicted"],
        "name": "spelling_error_model",
        "window": 1,
        "dictionary": {
          "name": "wikitionary_100K_vocab"
        },
        "save_path": "error_model/error_model.tsv",
        "lm_file": "language_models/en_wiki_no_punkt.arpa.binary"
      }
    ],
    "out": ["y_predicted"]
  },
  "train": {
    "validate_best": false,
    "test_best": true
  },
  "metadata": {
    "labels": {
      "telegram_utils": "ErrorModel"
    },
    "download": [
      "http://lnsigo.mipt.ru/export/deeppavlov_data/error_model.tar.gz",
      {
        "url": "http://lnsigo.mipt.ru/export/lang_models/en_wiki_no_punkt.arpa.binary.gz",
        "subdir": "language_models"
      }
    ]
  }
}