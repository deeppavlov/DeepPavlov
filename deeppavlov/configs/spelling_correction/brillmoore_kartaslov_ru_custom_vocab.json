{
  "dataset_reader": {
    "name": "typos_kartaslov_reader"
  },
  "dataset_iterator": {
    "name": "typos_iterator",
    "test_ratio": 0.02
  },
  "chainer":{
    "in": ["x"],
    "in_y": ["y"],
    "pipe": [
      {
        "name": "str_lower",
        "id": "lower",
        "in": ["x"],
        "out": ["x_lower"]
      },
      {
        "name": "nltk_moses_tokenizer",
        "id": "tokenizer",
        "in": ["x_lower"],
        "out": ["x_tokens"]
      },
      {
        "ref": "tokenizer",
        "in": ["y"],
        "out": ["y_tokens"]
      },
      {
        "fit_on": ["x_tokens", "y_tokens"],
        "in": ["x_tokens"],
        "out": ["tokens_candidates"],
        "name": "spelling_error_model",
        "window": 1,
        "candidates_count": 4,
        "dictionary": {
          "name": "static_dictionary",
          "dictionary_name": "compreno_words",
          "raw_dictionary_path": "compreno_wordforms.txt"
        },
        "save_path": "error_model/error_model_ru.tsv",
        "load_path": "error_model/error_model_ru.tsv"
      },
      {
        "class": "deeppavlov.models.spelling_correction.electors.kenlm_elector:KenlmElector",
        "in": ["tokens_candidates"],
        "out": ["y_predicted_tokens"],
        "load_path": "language_models/ru_wiyalen_no_punkt.arpa.binary"
      },
      {
        "ref": "tokenizer",
        "in": ["y_predicted_tokens"],
        "out": ["y_predicted"]
      }
    ],
    "out": ["y_predicted"]
  },
  "train": {
    "validate_best": false,
    "test_best": true
  },
  "metadata": {
    "requirements": [
      "../dp_requirements/spelling.txt"
    ],
    "labels": {
      "telegram_utils": "ErrorModel",
      "server_utils": "ErrorModel"
    },
    "download": [
      "http://files.deeppavlov.ai/deeppavlov_data/error_model.tar.gz",
      {
        "url": "http://files.deeppavlov.ai/lang_models/ru_wiyalen_no_punkt.arpa.binary.gz",
        "subdir": "language_models"
      }
    ]
  }
}
