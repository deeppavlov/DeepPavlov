{
  "dataset_reader": {
    "name": "dstc2_reader",
    "data_path": "dstc2"
  },
  "dataset_iterator": {
    "name": "dialog_iterator"
  },
  "chainer": {
    "in": ["x"],
    "in_y": ["y"],
    "out": ["y_predicted"],
    "pipe": [
      {
        "id": "token_vocab",
        "fit_on": ["x"],
        "name": "default_vocab",
        "level": "token",
        "tokenizer": { "name": "split_tokenizer" },
        "save_path": "vocabs/token.dict",
        "load_path": "vocabs/token.dict"
      },
      {
        "in": ["x"],
        "in_y": ["y"],
        "out": ["y_predicted"],
        "main": true,
        "name": "go_bot",
        "debug": false,
        "word_vocab": "#token_vocab",
        "template_path": "dstc2/dstc2-templates.txt",
        "use_action_mask": false,
        "db_result_during_interaction": {
          "addr": "Sobina Square, 1/4",
          "area": "north",
          "food": "russian",
          "phone": "+7(965)173-37-33",
          "postcode": "141700",
          "pricerange": "cheap"
        },
        "network_parameters": {
          "load_path": "gobot_dstc2_best/model",
          "save_path": "gobot_dstc2_best/model",
          "learning_rate": 0.0008,
          "dropout_rate": 0.85,
          "hidden_size": 128,
          "dense_size": 64,
          "attention_mechanism": {
            "type": "cs_bahdanau",
            "hidden_size": 32,
            "depth": 3,
            "action_as_key": true,
            "max_num_tokens": 100,
            "projected_align": false
          }
        },
        "slot_filler": {
          "config_path": "../deeppavlov/configs/ner/slotfill_dstc2.json"
        },
        "intent_classifier": null,
        "embedder": {
          "name": "fasttext",
          "load_path": "embeddings/wiki.en.bin",
          "save_path": "embeddings/wiki.en.bin",
          "dim": 300
        },
        "bow_embedder": null,
        "tokenizer": {
          "name": "stream_spacy_tokenizer",
          "lowercase": false
        },
        "tracker": {
          "name": "featurized_tracker",
          "slot_names": ["pricerange", "this", "area", "slot", "food", "name"]
        }
      }
    ]
  },
  "train": {
    "epochs": 200,
    "batch_size": 16,

    "metrics": ["per_item_dialog_accuracy"],
    "validation_patience": 30,
    "val_every_n_epochs": 1,

    "log_every_n_batches": -1,
    "log_every_n_epochs": 1,
    "show_examples": false
  }
}
