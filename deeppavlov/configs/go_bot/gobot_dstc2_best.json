{
  "dataset_reader": {
    "name": "dstc2_reader",
    "data_path": "dstc2"
  },
  "dataset_iterator": {
    "name": "dialog_iterator"
  },
  "chainer": {
    "in": ["x"],
    "in_y": ["y"],
    "out": ["y_predicted"],
    "pipe": [
      {
        "id": "token_vocab",
        "fit_on": ["x"],
        "name": "default_vocab",
        "level": "token",
        "tokenizer": { "name": "split_tokenizer" },
        "save_path": "vocabs/token.dict",
        "load_path": "vocabs/token.dict"
      },
      {
        "id": "restaurant_database",
        "name": "sqlite_database",
        "table_name": "mytable",
        "primary_keys": ["name"],
        "save_path": "dstc2/resto.sqlite"
      },
      {
        "id": "go_bot_network",
        "name": "go_bot_rnn",
        "main": true,
        "load_path": "gobot_dstc2_best/model",
        "save_path": "gobot_dstc2_best/model",
        "debug": false,
        "fit_batch_size": 16,
        "fit_valid_rate": 0.2,
        "fit_learning_rate_div": 10.0,
        "fit_linear": false,
        "fit_min_batches": 15,
        "fit_num_batches": 256,
        "learning_rate": [0.00185, 0.0185],
        "learning_rate_decay": ["1cycle", 0.8],
        "learning_rate_decay_epochs": 18,
        "optimizer": "tensorflow.train:AdamOptimizer",
        "dropout_rate": 0.55,
        "l2_reg_coef": 2e-3,
        "hidden_size": 128,
        "dense_size": 128,
        "attention_mechanism": {
          "type": "cs_bahdanau",
          "hidden_size": 32,
          "depth": 3,
          "action_as_key": true,
          "max_num_tokens": 100,
          "projected_align": false
        },
        "word_vocab": "#token_vocab",
        "template_path": "dstc2/dstc2-templates.txt",
        "template_type": "DualTemplate",
        "database": "#restaurant_database",
        "api_call_action": "api_call",
        "use_action_mask": false,
        "slot_filler": {
          "config_path": "../deeppavlov/configs/ner/slotfill_dstc2.json"
        },
        "intent_classifier": null,
        "embedder": {
          "name": "fasttext",
          "load_path": "embeddings/wiki.en.bin",
          "save_path": "embeddings/wiki.en.bin",
          "dim": 300
        },
        "bow_embedder": null,
        "tokenizer": {
          "name": "stream_spacy_tokenizer",
          "lowercase": false
        },
        "tracker": {
          "name": "featurized_tracker",
          "slot_names": ["pricerange", "this", "area", "food", "name"]
        }
      },
      {
        "ref": "go_bot_network"
      },
      {
        "ref": "go_bot_network",
        "in": ["x"],
        "in_y": ["y"],
        "out": ["y_predicted"]
      }
    ]
  },
  "train": {
    "epochs": 200,
    "batch_size": 4,

    "pytest_max_batches": 2,

    "metrics": ["per_item_dialog_accuracy"],
    "validation_patience": 30,
    "val_every_n_epochs": 1,

    "log_every_n_batches": -1,
    "log_every_n_epochs": 1,
    "show_examples": false,
    "tensorboard_log_dir": "dp_logs_gobot_best"
  },
  "metadata": {
    "requirements": [
      "../dp_requirements/tf.txt",
      "../dp_requirements/fasttext.txt",
      "../dp_requirements/spacy.txt",
      "../dp_requirements/en_core_web_sm.txt"
    ],
    "labels": {
      "telegram_utils": "GoalOrientedBot",
      "server_utils": "GoalOrientedBot"
    },
    "download": [
      "http://files.deeppavlov.ai/deeppavlov_data/vocabs.tar.gz",
      "http://files.deeppavlov.ai/deeppavlov_data/gobot_dstc2_best_v2.tar.gz",
      {
        "url": "http://files.deeppavlov.ai/datasets/dstc2_v2.tar.gz",
        "subdir": "dstc2"
      },
      {
        "url": "http://files.deeppavlov.ai/deeppavlov_data/embeddings/wiki.en.bin",
        "subdir": "embeddings"
      }
    ]
  }
}
