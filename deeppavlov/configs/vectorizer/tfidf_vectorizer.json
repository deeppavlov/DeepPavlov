{
  "dataset_reader": {
    "name": "line_reader",
    "data_path": "wiki/wikitext_ru/ru.wiki.train.txt"
  },
  "dataset_iterator": {
    "name": "data_learning_iterator"
  },

  "chainer": {
    "in": "q",
    "pipe": [
      {
        "name": "ru_tokenizer",
        "id": "my_tokenizer",
        "in": "q",
        "lemmas": true,
        "out": "q_token_lemmas"
      },
      {
        "ref": "my_tokenizer",
        "in": "q_token_lemmas",
        "out": "q_lem"
      },
      {
        "in": [
          "q_lem"
        ],
        "out": [
          "q_vect"
        ],
        "fit_on": [
          "q_lem"
        ],
        "id": "tfidf_vec",
        "name": "sklearn_component",
        "save_path": "vectorizer/tfidf_vectorizer_ruwiki.pkl",
        "load_path": "vectorizer/tfidf_vectorizer_ruwiki.pkl",
        "model_name": "sklearn.feature_extraction.text:TfidfVectorizer",
        "infer_method": "transform"
      }
    ],
    "out": "q_vect"
  },

  "train": {
    "validate_best": false,
    "test_best": false
  },
  "metadata": {
    "download": [
      {
        "url": "http://files.deeppavlov.ai/datasets/wikitext_ru.zip",
        "subdir": "wiki"
      }
    ]
  }

}



